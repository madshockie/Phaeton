<h1><%= @game.name %></h1>
				
				<section class="meta">
				<p>Author: <a href="http://www.jabz.info/contact/jonas-jared-jacek/"><%= @game.author %></a> | Date: <%=@game.created_at.strftime("%a %e, %b %Y") %> | Comments: <a href="#comments"><%=@game.comments.count %></a></p>
				<p>Tags: <a href="#" rel="tag"><%= @game.smallname %></a>, <a href="#" rel="tag">2-player</a></p>
				</section>
				
				<%= @game.statement.html_safe %>
				
				<h3>Input Format</h3>
				<p><%= @game.inputdetails %></p>
				
				<h3>Output Format</h3>
				<p><%= @game.outputdetails %></p>
				
				<h3>Requirements</h3>
				<p><%= @game.requirements %></p>

<h4 id="comments">Comments</h4>

<% for comment in @comments %>
<section class="meta">
		<%= link_to image_tag(comment.user.photo.url(:thumb), :title => comment.user.username), comment.user %>
				<p><b><%= comment.title %></b></p>
				<p>by <%= link_to comment.user.username, comment.user %> at <%=comment.created_at.strftime("%a %e, %b %Y %H:%M") %></p>
				<p><%= comment.comment %></p>
				</section>
<% end %>

<% form_for([@game, Comment.new],  :url => comment_game_path) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    
    <%= f.label :comment %>
    <%= f.text_area :comment %>
    <br/>
    <%= f.submit "Submit", :class => 'button' %>
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
